<%= form_for :login, :url => {:action => :create} do |f| %>

  <div class="form-group">
    <label>Email:</label>
    <%= f.text_field :email, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <label>Password:</label>
    <%= f.password_field :password, :class=>"form-control" %>

</div>
<div>
  <%= f.submit 'Log In', :class=>"btn btn-default" %>
</div>
</div>
<% end %>
