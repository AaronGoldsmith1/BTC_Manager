<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash alert  alert-success" %>
<% end %>



<%= form_for @address do |f| %>

  <div class="container">
  <div class="form-group">
    <label>Label: </label>
    <%= f.text_field :label, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <label>Address: </label>
    <%= f.text_field :loc, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <label>Memo:</label>
    <%= f.text_field :memo, :class=>"form-control" %>
  </div>

  <div>
  <%= f.submit  class: "btn btn-default" %>
  </div>
</div>
<% end %>
